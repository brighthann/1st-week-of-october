# Production Environment Variables

# Database
POSTGRES_DB=monitoring
POSTGRES_USER=dashmonitor_user
POSTGRES_PASSWORD=PASSWORD

# Constructed from above
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Docker Registry 
DOCKER_REGISTRY=docker-registry
TAG=latest

# Monitoring Configuration
CHECK_INTERVAL=30
ALERT_THRESHOLD=2
TIMEOUT_THRESHOLD=5

# Slack Webhook 
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/WEBHOOKURL

# API Configuration
API_HOST=0.0.0.0
API_DEBUG=false